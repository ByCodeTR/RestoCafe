# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database_name?schema=public"
POSTGRES_URL="postgresql://username:password@hostname:port/database_name?schema=public"

# Server Configuration
PORT=5000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-replace-this
COOKIE_SECRET=your-super-secure-cookie-secret-key-here

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Application Settings
RESTAURANT_NAME="RestoCafe"
CURRENCY="TRY"
TIMEZONE="Europe/Istanbul"

# Printer Settings (Optional)
ENABLE_PRINTER=false
PRINTER_WIDTH=48

# Upload Settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session Settings
SESSION_SECRET=your-session-secret-key-here 